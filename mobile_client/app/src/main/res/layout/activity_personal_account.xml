<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account_background"
    tools:context=".personal_account">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="КАРТА51"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/buttons"
        android:text="Мои карты"
        android:textSize="18sp" />

    <Button
        android:id="@+id/b2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:layout_marginTop="3dp"
        android:background="@drawable/buttons"
        android:text="Проверка баланса"
        android:textSize="18sp" />

    <Button
        android:id="@+id/b3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/buttons"
        android:text="Пополнить баланс"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="109dp"
        android:textSize="20sp"
        android:text="Добро пожаловать в личный кабинет."
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="148dp"
        android:text="Ваш номер"
        android:textColor="@android:color/black"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btn_logout"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:text="Выйти"
        android:textSize="18sp" />


</RelativeLayout>